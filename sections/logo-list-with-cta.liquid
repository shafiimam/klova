{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}

<div class="page-width">
  {%- if section.settings.title != blank -%}
    <div class="section-header small--text-center">
      <h2 class="section-header__title" style="text-align: center;">{{ section.settings.title | escape }}</h2>
    </div>
  {%- endif -%}

  {%- if section.blocks.size > 0 -%}
    <div class="logo-bar logo-bar--{{ section.id }}">
      <div class="new-grid product-grid" data-view="6-2">
        {%- for block in section.blocks -%}
          <div class="grid-item grid-product" {{ block.shopify_attributes }}>
            <div class="logo-bar__item{% if block.settings.image == blank %} logo-bar__item-svg{% endif %}">
              {%- if block.settings.image != blank -%}
                {%- assign img_url = block.settings.image | image_url %}
                <img
                  class="logo-bar__image lazyload"
                  data-src="{{ img_url }}"
                  data-widths="[70]"
                  data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                  alt="{{ block.settings.image.alt }}"
                  height="70"
                  width="70"
                  loading="lazy"
                >
              {%- else -%}
                {{ 'logo' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--no-padding' }}
              {%- endif -%}
              {%- if block.settings.logo_title != blank -%}
                <span
                  style="margin: 15px -10px;"
                >
                  {{ block.settings.logo_title }}
                </span>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
        {%- if section.settings.link != blank -%}
          <a
            type="button"
            class="c-button -primary "
            name="commit"
            aria-label="{{ section.settings.button_label }}"
            href="{{ section.settings.link }}"
            style="
              text-decoration: none;
              min-width: 338px;
              margin:12px auto 0 auto;
              text-decoration:none;
            "
          >
            <span class="form__submit--large" style="display:block;margin-bottom:0">
              {{ section.settings.button_label -}}
            </span>
          </a>
        {%- endif -%}
      </div>
    </div>
  {%- endif -%}
</div>

{%- if section.settings.divider -%}</div>{%- endif -%}

{% schema %}
{
  "name": "Logo list",
  "class": "index-section",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Our brands"
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "Show section divider",
      "default": false
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "Optional"
    },
    {
      "type": "text",
      "default": "Button",
      "id": "button_label",
      "label": "Button label"
    }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Add alt text for better SEO with 'Edit' button above"
        },
        {
          "type": "text",
          "id": "logo_title",
          "default": "Logo Title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo list",
      "blocks": [
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        }
      ]
    }
  ]
}
{% endschema %}
