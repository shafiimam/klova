{% assign image_allignment = section.settings.alignment %}
{% capture image_content %}
<div class="image-with-text-cta__content--image">
  <img
    src="{{ section.settings.image | img_url: 'master' }}"
    alt=""
    width="100%"
    height="100%"
  >
</div>
{% endcapture %}
<section class="image-with-text-cta" id="{{ section.id }}">
  <div class="page-width">
    <div class="image-with-text-cta__container">
      <div class="image-with-text-cta__content">
        {% if image_allignment == 'left' %}
          {{ image_content }}
        {% endif %}
        <div class="image-with-text-cta__content--text">
          <h1 class="heading">{{ section.settings.heading }}</h1>
          <div class="subheading">
            {{ section.settings.subHeading }}
          </div>
          {% if section.settings.button_text %}
            <a href="{{ section.settings.button_url }}" class="cta-button">{{ section.settings.button_text }}</a>
          {% endif %}
        </div>
        {% if image_allignment == 'right' %}
          {{ image_content }}
        {% endif %}
      </div>
    </div>
  </div>
</section>
<style>
  #{{ section.id }} .page-width {
    background: {{ section.settings.background_color }};
    {% if section.settings.show_section_devider %}
      margin-top: 50px;
    {% endif %}
  }
  .image-with-text-cta__content {
    padding: 100px 80px;
    display: flex;
    justify-content: space-between;
  }

  .image-with-text-cta__content--text {
    flex-basis: 50%;
  }
  .image-with-text-cta__content--text .heading {
    color: #1e062c;
    font-size: 40px;
    font-style: normal;
    font-weight: 600;
    line-height: 40px; /* 100% */
  }
  .image-with-text-cta__content--text .subheading {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 30px;
    margin-top: 16px;
    color: #000;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 29px;
  }
  .image-with-text-cta__content--image {
    flex-basis: calc(50% - 80px);
  }
  .image-with-text-cta__content--text .cta-button {
    padding: 17px 80px;
    border-radius: 5px;
    background: #5fb1c2;
    color: #fff;
    text-align: center;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 24px;
    transition: 0.3s;
  }
  .image-with-text-cta__content--text .cta-button:hover {
    background: #2d7b8e;
    color: #fff;
  }
  @media (max-width: 500px) {
    .image-with-text-cta__content{
      padding: 40px 0;
    }
    .image-with-text-cta__content--text .heading {
      font-size: 30px;
      font-weight: 600;
      line-height: 36px;
    }
    .image-with-text-cta__content--text .subheading {
      font-size: 16px;
      font-weight: 400;
      line-height: 26px;
    }
    .image-with-text-cta__content--text .cta-button {
      font-size: 14px;
      line-height: 18px;
      text-transform: uppercase;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
  @media (max-width: 800px) {
    .image-with-text-cta__content {
      flex-direction: column;
      padding: 48px 0;
      gap: 24px;
    }
  }
</style>

{% schema %}
{
  "name": "Image With Text CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "subHeading",
      "label": "Sub Heading",
      "default": "<p>Sub Heading</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Button Text 2",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url_2",
      "label": "Button Url 2"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Image on left"
        },
        {
          "value": "right",
          "label": "Image on Right"
        }
      ]
    },
    {
      "type": "color_background",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_section_devider",
      "label": "Show Section Divider",
      "default": false
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Image With Text CTA"
    }
  ]
}
{% endschema %}
