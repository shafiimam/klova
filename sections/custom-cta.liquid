<div class="custom-section page-width ">
  <div class="background-image-{{ section.id }} br-radius-24">
    <div class="content {{ section.settings.desktop_alignment }}">
      <h2 class="heading">{{ section.settings.heading }}</h2>
      <p class="subheading">{{ section.settings.subheading }}</p>
      <div class="call-to-action__button">
        <a class="btn" href="{{ section.settings.cta_link }}"> {{ section.settings.cta_text }}</a>
      </div>
    </div>
  </div>
</div>

{%- style -%}
  .custom-section {
    position: relative;
    width: 100%;
    margin: 50px auto;
    /* Add other styles for the section background (e.g., height, padding) */
  }

  .background-image-{{ section.id }} {
    background-image: url('{{ section.settings.desktop_image | img_url: 'master' }}');
    padding: 100px 50px;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .content {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .content.left {
    text-align: left; /* Align left for desktop */
    align-items: flex-start;
  }

  .content.right {
    text-align: right; /* Align right for desktop */
    align-items: flex-end;
  }

  .call-to-action__button .btn{
    font-size: 14px;
    font-weight: 700;
    line-height: 14px;
    text-align: center;
  }
  .heading {
    color: #1e062c;
    font-size: 48px;
    font-style: normal;
    font-weight: 700;
    line-height: 50px; /* 104.167% */
    max-width: 525px;
  }
  .subheading {
    color: #1e062c;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 24px; /* 150% */
    max-width: 525px;
    margin-bottom: 30px;
  }

  @media screen and (min-width:500px) and (max-width: 800px){
    .background-image-{{ section.id }} {
      background-image: url('{{ section.settings.tablet_image | img_url: 'master' }}');
      padding:60px 20px;
    }
    .content{
      max-width: 325px;
    }
    .heading{
      font-size: 30px;
      line-height:34px;
    }
    .subheading{
      font-size: 14px;
      font-weight: 400;
      line-height: 24px;
      text-align: left;
    }
  }
  @media screen and (max-width: 500px) {
    .background-image-{{ section.id }}{
      background-image: url('{{ section.settings.mobile_image | img_url: 'master' }}');
      padding: 40px 30px;
      min-height: 650px;
    }
    .heading{
      font-size: 30px;
      font-weight: 700;
      line-height: 34px;
      text-align: center;
    }
    .subheading{
      font-size: 14px;
      font-weight: 400;
      line-height: 24px;
      text-align: center;
    }
    .content{
      align-items: center !important;
    }
  }
{%- endstyle -%}

{% schema %}
{
  "name": "Custom CTA",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Background Image"
    },
     {
      "type": "image_picker",
      "id": "tablet_image",
      "label": "Tablet Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Call to Action Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text"
    },
    {
      "type": "select",
      "id": "desktop_alignment",
      "label": "Desktop Content Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    }
  ],
  "presets": [
    {
      "name": "Custom CTA",
      "category": "Custom"
    }
  ]
}
{% endschema %}
