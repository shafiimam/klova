{% assign product = section.settings.product %}

<div class="page-width">
  <div class="bundle-prd-includes" id="{{ section.id }}">
    <div class="container-section">
      <div class="section-header">
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
      </div>
      {% for block in section.blocks %}
        {% if block.type == 'bundle_ingredients' %}
          {% render 'bundle-ingredients', product: product, block: block %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  #{{ section.id }} {
    padding: 80px 120px;
  }
  .bundle-prd-includes .section-header__title{
    color: #1E062C;
    font-family: "Bergen Sans";
    font-size: 48px;
    font-style: normal;
    font-weight: 600;
    line-height: 52px; /* 108.333% */
    text-align: center;
  }

  @media (min-width: 501px) and (max-width: 800px) {
    #{{ section.id }} {
      padding: 64px 0;
    }
    .bundle-prd-includes .section-header__title{
      font-size: 40px;
      line-height: 50px; /* 125% */`
    }
  }
  @media (max-width: 500px){
    #{{ section.id }} {
      padding: 64px 0;
    }
    .bundle-prd-includes .section-header__title{
      font-size: 30px;
      line-height: 36px;
    }
  }
</style>

{% schema %}
{
  "name": "Bundle Product Includes",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Bundle Product Includes"
    }
  ],
  "blocks": [
    {
      "type": "bundle_ingredients",
      "name": "Bundle Ingredients",
      "limit": 1,
      "settings": [
          {
          "type": "select",
          "id": "showSecondText",
          "label": "Show second text",
          "default": "no",
          "options": [
            {
              "label": "Yes",
              "value": "yes"
            },
            {
              "label": "No",
              "value": "no"
            }
          ]
        },
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bundle Product Includes"
    }
  ]
}
{% endschema %}
