<div class="faq">
  <div class="faq__wrapper rem-spcing">
    <div class="page-width mob-spacing">
      <div class="faq__inner">
        {% if section.settings.title != blank %}
        <h2 class="faq__title"> {{ section.settings.title }} </h2>
        {% endif %}
        <div class="accordions">
          <ul class="accordion__items">
            {% for block in section.blocks %}
            {% if block.settings.acc-button != blank %}
            <li class="accordion__item">
              <button class="accordion__button"> {{ block.settings.acc-button }} </button>
              <div class="accordion__text"><div class="accordion__inside">{{ block.settings.acc-text }}</div></div>
            </li>
            {% endif %}
            {% endfor %}
            {% if section.settings.acc-button-spec != blank %}
            <li class="accordion__item">
              <button class="accordion__button"> {{ section.settings.acc-button-spec }} </button>
              <div class="accordion__text"> {{ section.settings.acc-text-spec }} </div>
            </li>
            {% endif %}
            {% if section.settings.acc-button-spec-two != blank %}
            <li class="accordion__item">
              <button class="accordion__button"> {{ section.settings.acc-button-spec-two }} </button>
              <div class="accordion__text"> {{ section.settings.acc-text-spec-two }} </div>
            </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @media only screen and (min-width:320px) and (max-width:768px){
    .rem-spcing{
      padding-right:20px;
      padding-left:20px;
    }
    .mob-spacing{
      padding:0px;
    }
  }
</style>

{% schema %}
{
  "name": "FAQ",
  "settings": [
  {
  "type": "text",
  "id": "title",
  "label": "Title",
  "default": "FAQ"
  },
  {
  "type": "header",
  "content": "Special items for each product",
  "info": "Custopmize from metafields"
  },
  {
  "type": "text",
  "id": "acc-button-spec",
  "label": "First title"
  },
  {
  "type": "richtext",
  "id": "acc-text-spec",
  "label": "First text"
  },
  {
  "type": "text",
  "id": "acc-button-spec-two",
  "label": "Second title"
  },
  {
  "type": "richtext",
  "id": "acc-text-spec-two",
  "label": "Second text"
  }
  ],
  "blocks": [
  {
  "type": "text",
  "name": "Accordion item",
  "settings": [
  {
  "type": "text",
  "id": "acc-button",
  "label": "Title"
  },
  {
  "type": "richtext",
  "id": "acc-text",
  "label": "Text"
  }
  ]
  }
  ],
  "presets": [
  {
  "category": "New",
  "name":"FAQs"
  }
  ]
}
{% endschema %}
