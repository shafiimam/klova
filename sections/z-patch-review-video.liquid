<section class="zsleep-video">
  <div class="z-patch-video-content">
    <div class="zsleep-video-data custom-page-width">
      <!-- Video content start  -->
 {% for block in section.blocks %}
      <div class="video-details">

        <div class="video-iframe-data footer-img-data img-pos-{{ forloop.index }}">

        <div class="video-iframe-video"> 
        <div class="video-footer-review">
        <iframe width="100%" height="100%" src="{{ block.settings.footer_vimeo_url }}">
        </iframe>
        </div>
         </div>

        <div class="video-details-text">
            <img src="{{ block.settings.footer_img_url | img_url:'master' }}">
        </div>
          
        </div>  

  
    
      </div>
       {% endfor %}

      
      <!-- Video content end -->
    </div>
  </div>
</section>


