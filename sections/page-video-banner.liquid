<section class="zsleep-show">
  <div class="zsleep-show-content">
    <div class="zsleep-content zsleep-page-width">
      <h2 style="text-align: center;" class="trans-text">{{ section.settings.heading }}</h2>
      <div class="zsleep-show-data">
        <p style="text-align: center;">
          <span
            style="font-size: 18px; font-family: Montserrat; font-weight: 600; font-style: normal; color: rgba(103, 201, 187, 0.95);"
          >
            {{- section.settings.subHeading -}}
          </span>
        </p>
      </div>
      <!--
        <video
          width="600"
          height="400"
          controls
          poster="{{ section.settings.video_thumbnail }}"
        >
          <source src="{{ section.settings.video.sources.first.url | asset_url }}" type="video/mp4">
        </video>
      -->
      <img src="{{ section.settings.image_banner | image_url }}" width="600" height="400">

      <p style="text-align: center;">
        <span
          style="font-size: 14px; padding-top:10px; font-family: Montserrat; font-weight: 600; font-style: normal; color: black"
        >
          {{- section.settings.video_caption -}}
        </span>
      </p>

      {% for block in section.blocks %}
        {% if block.type == 'content' %}
          <p style="text-align: start; padding-bottom: 8px;padding-top:10px;">
            <span style="font-size: 18px; padding-top:10px; font-family: Montserrat; font-weight: 600; font-style: normal; color: rgba(103, 201, 187, 0.95);">
              {{ block.settings.content | strip_html }}
            </span>
          </p>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<div class="sleep-patch-inst">
  <div class="sleep-patch-data">
    <div style="text-align: center;" class="zsleep-img zsleep-page-width">
      <h2 style="text-align: center;" class="it-time">{{ section.settings.heading2 }}</h2>
      <p style="text-align: center;">
        <span
          style="font-size: 18px; padding-top:10px; font-family: Montserrat; font-weight: 600; font-style: normal; color:#FFF;"
        >
          {{ section.settings.subheading2 }}
        </span>
      </p>
      <img src="{{ section.settings.image | image_url }}">
      <p style="text-align: center;">
        <span style="font-size: 18px; padding-top:10px; font-family: Montserrat; font-weight: 600; font-style: normal; color:#FFF;">
          {{ section.settings.subHeading3 }}
        </span>
      </p>
      <p style="text-align: center;padding-bottom: 20px;">
        <span style="font-size: 18px; padding-top:10px; font-family: Montserrat; font-weight: 600; font-style: normal; color:#FFF;">
          Designed to help you fall asleep faster and stay asleep longer our patch leverages the power of nature to
          improve your sleep quality without the need for pills or potions.</span
        >
      </p>
    </div>
  </div>
</div>
<style>
  .it-time{
    color:#fff;
    padding-top:10px;
  }
  .sleep-patch-data{
    background:#504e98;
    height:100%;
  }
  .zsleep-show-content{
    background:rgba(225,223,238,1);
  }
  .zsleep-content{
    text-align:center;
    padding:20px 0px;
  }
  .zsleep-show-data{
    max-width:530px;
    margin:0 auto;
  }
  .zsleep-img{
    position:relative;
  }
  .zsleep-img img{
    width: 500px;
    /* position: absolute; */
    /* top: 35px; */
    z-index: 111;
    /* transform: translate(29%, 0%); */
  }
</style>
{% schema %}
{
  "name": "Page Video With Content",
  "settings": [
