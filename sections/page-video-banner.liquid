      "default": "https://d9hhrg4mnvzow.cloudfront.net/shop.klova.com/zsleep-patches/c4b1f0a6-screen-shot-2021-08-12-at-10-32-15-am_10fo093000000000000028.png"
    },
    {
      "type": "image_picker",
      "id": "image_banner",
      "label": "Image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video Url(MP4 format only)"
    },
    {
      "type": "richtext",
      "id": "video_caption",
      "label": "Video Caption"
    },
    {
      "type": "text",
      "id": "heading2",
      "label": "Heading 2",
      "default": "Heading 2"
    },
    {
      "type": "text",
      "id": "subheading2",
      "label": "Subheading 2",
      "default": "Sub Heading 2"
    },
    {
      "type":"image_picker",
      "id": "image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "subheading3",
      "label": "Subheading 3",
      "default": "Sub Heading 3"
    },
    {
      "type": "text",
      "id": "subheading4",
