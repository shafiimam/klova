      "name": "Content",
      "type": "content",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets":[
    {
      "name":"Page Video With Content"
    }
  ]
}
{% endschema %}
